    {
        "#cobertura-form": {
            "validation": {}
        },
        "#confronta-component": {
            "Magento_Ui/js/core/app": {
               "components": {
                    "regionList": {
                        "component": "Vass_Fija/js/regionList"
                    }
                }
            }
        }
        
    }
</script>